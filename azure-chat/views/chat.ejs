<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
        <title>Azure Chat App</title>
        <script src="lib/jquery-3.1.1.min.js"></script>
        <script src="lib/pubnub.4.8.0.min.js"></script>
        <script src="lib/bootstrap.min.js"></script>
        <script src="lib/mustache.min.js"></script>
        <link rel="stylesheet" href="lib/bootstrap.min.css"/>
        <link href="css/stylesheet.css" rel="stylesheet" />
        <script src="javascript/chat.js"></script>
    </head>

    <body style="font-family:Verdana">
        <div class='overlay' id='auth-overlay'>
            <h1 class="text-center" >Azure Device Chat</h1>
            <div class="container" >
                <div class="row " style="padding-top:100px;">
                    <div class="col-md-4 col-md-offset-4" style="text-align:center;">
                        <form >
                            <div class="form-group">
                                <input type="text" class="form-control" id="AzureUserName" name="AzureUserName" placeholder="User Name" required />
                                <br/>
                                <input type="button" id="Azurelogin"  class="btn btn-primary btn-block" value="ENTER CHAT"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div> 
        <div class="container" >

            <div class="row " style="padding-top:10px;">
                <img id="leave" height="30" width="30" class="pull-right" src="img/close.png">
            </div>

            <div class="row " style="padding-top:20px;">    
                <div class="col-md-8" >
                    <div class="panel panel-info" >
                        <div class="panel-heading text-left" id="chat-header">AZURE CHAT - 
                            <span id="chat-header-username" class="panel-title"></span> (
                            <span id="chat-header-role" class="panel-title"> </span> )
                        </div>
                        <div class="panel-body" id="messageList-widget">
                            <ul class="media-list" id="message-list"></ul>
                        </div>
                        <div class="panel-footer">
                            <div class="input-group">
                                <input type="text" class="form-control" id="inputMessage" placeholder="Enter Message" />
                                <span class="input-group-btn">
                                    <button class="btn btn-info" id="inputMessageSubmit" type="button">SEND</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4" >
                    <div class="panel panel-primary" >
                        <div class="panel-heading text-center">
                           Online Users
                        </div>
                        <div class="panel-body" id="onlineUser-widget">
                            <ul class="media-list" id="onlineDevices">
                                <li class="media" id="device1">
                                    <div class="media-body">
                                        <div class="media">
                                            <a class="pull-left" href="#">
                                                <img class="media-object img-circle" style="max-height:40px;" src="img/userImages/man-light-bulb-1.png" />
                                            </a>
                                            <div class="media-body" >
                                                <h5>Device 1</h5>
                                                <small class="text-muted" style="text-transform: uppercase;">Device
                                                    <img id="bulb1" height="30" width="30" src="img/status/off.svg">
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="media" id="device2">
                                    <div class="media-body">
                                        <div class="media">
                                            <a class="pull-left" href="#">
                                                <img class="media-object img-circle" style="max-height:40px;" src="img/userImages/man-light-bulb-2.png" />
                                            </a>
                                            <div class="media-body" >
                                                <h5>Device 2</h5>
                                                <small class="text-muted" style="text-transform: uppercase;">Device
                                                    <img id="bulb2" height="30" width="30" src="img/status/off.svg">
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                            <ul class="media-list" id="onlineUsers"> </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>